{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": ["ES2022", "es6", "dom"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022",
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "coverage",
    "webpack",
    "jest",
    "data",
    "**/*.spec.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
